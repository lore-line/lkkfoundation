---
/**
 * Footer — 4-column layout from reference.html (lines 390-445)
 * Pattern: dark bg, 12-col grid, newsletter form, social links
 */

const exploreLinks = [
  { label: "Our History", href: "/our-story" },
  { label: "Programs", href: "/programs" },
  { label: "Impact", href: "/impact" },
  { label: "News & Stories", href: "/news" },
];

const actionLinks = [
  { label: "Donate", href: "/get-involved#donate" },
  { label: "Volunteer", href: "/get-involved#volunteer" },
  { label: "Partner with Us", href: "/get-involved#partner" },
  { label: "Adopt a Pet", href: "/programs/animal-welfare" },
];
---

<footer class="bg-brand-dark text-brand-paper py-20 px-6 border-t border-white/10">
  <div class="container-wide">
    <div class="grid grid-cols-1 md:grid-cols-12 gap-12">
      <!-- Brand column -->
      <div class="md:col-span-5">
        <h3 class="font-serif text-3xl mb-6">Limketkai Foundation</h3>
        <p class="text-white/60 font-light max-w-sm mb-8">
          Rooted in Cagayan de Oro. Dedicated to the Filipino spirit of
          Bayanihan — uplifting lives through education, welfare, and technology.
        </p>
        <!-- TODO: Add social media links when accounts are ready -->
      </div>

      <!-- Explore links -->
      <div class="md:col-span-2">
        <h4 class="text-xs uppercase tracking-widest text-brand-gold mb-6">
          Explore
        </h4>
        <ul class="space-y-4 text-sm text-white/70 font-light">
          {
            exploreLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="hover:text-white transition-colors"
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Action links -->
      <div class="md:col-span-2">
        <h4 class="text-xs uppercase tracking-widest text-brand-gold mb-6">
          Action
        </h4>
        <ul class="space-y-4 text-sm text-white/70 font-light">
          {
            actionLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="hover:text-white transition-colors"
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Newsletter -->
      <div class="md:col-span-3">
        <h4 class="text-xs uppercase tracking-widest text-brand-gold mb-6">
          Newsletter
        </h4>
        <!-- TODO Phase 7: Wire up newsletter form submission -->
        <form class="flex border-b border-white/30 pb-2">
          <input
            type="email"
            placeholder="Your email address"
            class="bg-transparent border-none outline-none text-white w-full placeholder:text-white/40 text-sm font-light"
            aria-label="Email address"
          />
          <button
            type="submit"
            class="text-brand-gold hover:text-white transition-colors uppercase text-xs font-semibold tracking-wider"
          >
            Join
          </button>
        </form>
      </div>
    </div>

    <!-- Bottom bar -->
    <div
      class="mt-20 pt-8 border-t border-white/10 grid md:grid-cols-[1fr_auto] gap-4 items-center text-xs text-white/40 font-light"
    >
      <p>&copy; {new Date().getFullYear()} Limketkai Foundation, Inc. All rights reserved.</p>
      <div class="flex gap-6">
        <a href="#" class="hover:text-white">Privacy</a>
        <a href="#" class="hover:text-white">Terms</a>
      </div>
    </div>
  </div>
</footer>
