---
/**
 * Button â€” Matches the two CTA patterns from reference.html hero:
 *   - "primary": gold bg, dark text, rounded-full (line 132)
 *   - "outline": transparent, white border, rounded-full (line 135)
 */

interface Props {
  href?: string;
  variant?: "primary" | "outline";
  class?: string;
}

const {
  href,
  variant = "primary",
  class: className = "",
} = Astro.props;

const Tag = href ? "a" : "button";

const variants = {
  primary:
    "bg-brand-gold text-brand-dark hover:bg-white",
  outline:
    "border border-white/30 text-white backdrop-blur-sm hover:bg-white/10",
};

const baseClasses =
  "px-10 py-4 rounded-full text-sm font-medium transition-colors duration-300 flex items-center justify-center gap-2 min-w-[160px]";
---

<Tag
  href={href}
  class:list={[baseClasses, variants[variant], className]}
>
  <slot />
</Tag>
