---
/**
 * ImpactSnapshot — Stats + portrait section from reference.html (lines 305-344)
 * Pattern: 2-col grid, 2x2 metric grid left, portrait with quote card right
 *
 * TODO Phase 6: Connect to Sanity ImpactMetric model
 */
import SectionWrapper from "@components/shared/SectionWrapper.astro";
import MetricCard from "@components/shared/MetricCard.astro";

// Stats from reference.html — will be replaced by Sanity data
const metrics = [
  { value: "200+", label: "Scholars Graduated" },
  { value: "500+", label: "Animals Rescued" },
  { value: "12", label: "Community Centers" },
  { value: "₱5M+", label: "Aid Distributed" },
];
---

<SectionWrapper bg="white">
  <div class="grid lg:grid-cols-2 gap-16 items-center">
    <!-- Metrics -->
    <div>
      <span class="section-label">Our Impact</span>
      <h2 class="text-5xl md:text-6xl text-brand-dark mb-12 tracking-tight">
        Real change measured in lives, not just figures.
      </h2>
      <div class="grid grid-cols-2 gap-y-12 gap-x-8">
        {metrics.map((m) => <MetricCard value={m.value} label={m.label} />)}
      </div>
    </div>

    <!-- Portrait + testimonial -->
    <div class="relative">
      <img
        src="https://images.unsplash.com/photo-1489710437720-ebb67ec84dd2?q=80&w=1000&auto=format&fit=crop"
        alt="Happy Child"
        class="rounded-sm shadow-xl w-full h-auto grayscale-[20%] contrast-[1.1]"
        loading="lazy"
      />
      <div class="absolute -bottom-6 -left-6 bg-white p-6 shadow-lg max-w-xs hidden md:block border border-stone-100">
        <p class="font-serif italic text-lg text-brand-dark">
          <!-- TODO Phase 6: Replace with real Story from Sanity -->
          "The foundation didn't just give me books, they gave me a future."
        </p>
        <p class="text-xs uppercase tracking-widest text-brand-earth mt-4">
          — Maria, Scholar Class of '23
        </p>
      </div>
    </div>
  </div>
</SectionWrapper>
