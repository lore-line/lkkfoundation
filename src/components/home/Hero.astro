---
/**
 * Hero — Full-screen cinematic hero from reference.html (lines 109-148)
 * Pattern: full viewport, background image with gradient overlay,
 * 12-col grid, serif headline, dual CTAs, subtext right-aligned
 */
import Button from "@components/shared/Button.astro";
import { Icon } from "astro-icon/components";
---

<header class="relative h-screen w-full overflow-hidden flex items-end pb-20 md:pb-32">
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    <img
      src="https://images.unsplash.com/photo-1541339907198-e08756dedf3f?q=80&w=2070&auto=format&fit=crop"
      alt="Filipino Youth in Mindanao"
      class="w-full h-full object-cover animate-slow-zoom brightness-[0.85]"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-brand-dark/90 via-brand-dark/30 via-[35%] to-transparent"></div>
  </div>

  <div class="relative z-10 w-full container-wide">
    <div class="grid md:grid-cols-12 gap-6 items-end">
      <div class="md:col-span-8 lg:col-span-7">
        <!-- Location badge -->
        <div class="inline-flex items-center gap-2 mb-6 px-4 py-1.5 rounded-full border border-white/20 bg-white/5 backdrop-blur-md">
          <Icon name="solar:map-point-linear" class="w-4 h-4 text-brand-gold" />
          <span class="text-xs text-brand-white tracking-widest uppercase">
            Cagayan de Oro, Philippines
          </span>
        </div>

        <!-- Headline — PRD core narrative -->
        <h1 class="font-serif text-6xl md:text-8xl lg:text-9xl text-brand-paper leading-[0.9] tracking-tighter mb-8 opacity-95">
          Growing Futures <br />
          <span class="italic text-brand-gold font-light">in Mindanao</span>
        </h1>

        <!-- CTAs -->
        <div class="flex flex-col sm:flex-row gap-5 mt-10">
          <Button href="/get-involved#donate" variant="primary">
            Make a Donation
          </Button>
          <Button href="/get-involved" variant="outline">
            Join the Community
          </Button>
        </div>
      </div>

      <div class="md:col-span-4 lg:col-span-5 flex md:justify-end pb-2">
        <p class="text-white/80 text-sm md:text-base font-light leading-relaxed max-w-xs md:text-right">
          Continuing the Limketkai legacy by nourishing the land, educating the
          youth, and protecting the voiceless.
        </p>
      </div>
    </div>
  </div>
</header>
