---
/**
 * PlantGrowthSection â€” "From Seed to Canopy"
 * Vertical timeline from reference.html (lines 191-252)
 * Pattern: center line, alternating 2-col grid stages with gold dot markers,
 * grayscale images that colorize on hover.
 */

const stages = [
  {
    label: "The Roots",
    title: "Education & Values",
    description:
      "Providing scholarships and DanceSport training to instill discipline and hope in the youth of Cagayan de Oro.",
    image:
      "https://images.unsplash.com/photo-1509062522246-3755977927d7?q=80&w=1000&auto=format&fit=crop",
    alt: "Students in classroom",
    align: "left",
  },
  {
    label: "The Trunk",
    title: "Compassion & Welfare",
    description:
      "Our Animal Rescue center provides sanctuary, proving that a resilient community cares for all living beings.",
    image:
      "https://images.unsplash.com/photo-1548199973-03cce0bbc87b?q=80&w=1000&auto=format&fit=crop",
    alt: "Animal Rescue",
    align: "right",
  },
  {
    label: "The Leaves",
    title: "Access & Infrastructure",
    description:
      "Building modern libraries and tech hubs to bridge the digital divide in Mindanao.",
    image:
      "https://images.unsplash.com/photo-1531482615713-2afd69097998?q=80&w=1000&auto=format&fit=crop",
    alt: "Tech Education",
    align: "left",
  },
];
---

<section class="bg-brand-dark text-brand-paper py-32 px-6 md:px-10 relative overflow-hidden">
  <!-- Faint tree silhouette background -->
  <div class="absolute inset-0 flex justify-center" aria-hidden="true">
    <img
      src="https://images.unsplash.com/photo-1550611388-8e0cc65f980c?q=80&w=1400&auto=format&fit=crop"
      alt=""
      class="h-full w-auto max-w-none object-cover opacity-[0.06] mix-blend-luminosity"
      loading="lazy"
    />
  </div>

  <!-- Background dot texture -->
  <div
    class="absolute inset-0 opacity-10"
    style="background-image: radial-gradient(#C49A6C 1px, transparent 1px); background-size: 40px 40px;"
    aria-hidden="true"
  ></div>

  <div class="max-w-6xl mx-auto relative z-10">
    <div class="text-center mb-24">
      <h2 class="font-serif text-4xl md:text-5xl lg:text-6xl tracking-tight mb-6">
        From Seed to Canopy
      </h2>
      <p class="text-white/60 font-light max-w-xl mx-auto">
        We nurture every stage of development, ensuring our impact sustains
        generations.
      </p>
    </div>

    <!-- Vertical Timeline -->
    <div class="relative">
      <!-- Center Line (hidden on mobile since gold dots are also hidden) -->
      <div class="absolute hidden md:block left-1/2 top-0 bottom-0 w-px bg-white/20 -translate-x-1/2"></div>

      {
        stages.map((stage, i) => (
          <div class:list={[
            "relative grid md:grid-cols-2 gap-12 items-center",
            i < stages.length - 1 && "mb-32",
          ]}>
            {/* Text */}
            <div class:list={[
              stage.align === "left"
                ? "md:pr-16 md:text-right order-1"
                : "md:pl-16 md:text-left order-1 md:order-2",
            ]}>
              <span class="text-brand-gold font-serif italic text-2xl mb-2 block">
                {stage.label}
              </span>
              <h3 class="text-3xl font-medium mb-4">{stage.title}</h3>
              <p class="text-white/60 font-light leading-relaxed">
                {stage.description}
              </p>
            </div>

            {/* Gold dot on center line */}
            <div class="hidden md:flex absolute left-1/2 top-1/2 -translate-y-1/2 -translate-x-1/2 w-4 h-4 bg-brand-gold rounded-full shadow-[0_0_20px_rgba(212,175,55,0.4)]"></div>

            {/* Image */}
            <div class:list={[
              stage.align === "left"
                ? "md:pl-16 order-2"
                : "md:pr-16 order-2 md:order-1",
            ]}>
              <div class="aspect-video w-full rounded-lg overflow-hidden bg-brand-earth/20 relative group">
                <img
                  src={stage.image}
                  alt={stage.alt}
                  class="w-full h-full object-cover opacity-70 group-hover:opacity-100 transition-opacity duration-500 grayscale hover:grayscale-0"
                  loading="lazy"
                />
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
